{
    "compilerOptions": {
        // Ensure that .d.ts files are created by tsc, but not .js files
        "declaration": true,
        "emitDeclarationOnly": true,
        // Ensure that Babel can safely transpile files in the TypeScript project
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "outDir": "dist/"
    },
    "include": ["src", "**/*.ts", "**/*.tsx"]
}
